<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPostFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="60sp"
        android:text="AddPost" />

    <Button
        android:id="@+id/addpost"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:gravity="center"

        android:text="ask a question"
        android:textColor="@color/White"
        android:textSize="21sp"
        android:textStyle="italic"

        android:layout_centerHorizontal="true"
        android:layout_above="@id/addpoll"
        android:layout_marginBottom="30dp"
         android:background="@drawable/addpost"
         />

    <Button
        android:id="@+id/addpoll"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="conduct a Poll"
        android:textStyle="italic"
        android:layout_marginBottom="30dp"
        android:textColor="@color/White"
        android:textSize="21sp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/addsurvey"
        android:background="@drawable/addpost"
        />

    <Button
        android:id="@+id/addsurvey"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="conduct a survey"
        android:textColor="@color/White"
        android:textStyle="italic"
        android:textSize="21sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:background="@drawable/addpost"
        />


</RelativeLayout>